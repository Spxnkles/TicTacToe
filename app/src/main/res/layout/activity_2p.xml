<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/topLeft"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginEnd="5dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:onClick="gameBoardClick"
        android:textSize="75dp"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/top"
        app:layout_constraintEnd_toStartOf="@+id/top" />

    <Button
        android:id="@+id/topRight"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="5dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:onClick="gameBoardClick"
        android:textSize="75dp"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/top"
        app:layout_constraintStart_toEndOf="@+id/top" />

    <Button
        android:id="@+id/top"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginBottom="5dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:onClick="gameBoardClick"
        android:textSize="75dp"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toTopOf="@+id/middle"
        app:layout_constraintEnd_toEndOf="@+id/middle" />

    <Button
        android:id="@+id/bottomLeft"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginEnd="5dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:onClick="gameBoardClick"
        android:textSize="75dp"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toStartOf="@+id/bottom"
        app:layout_constraintTop_toTopOf="@+id/bottom" />

    <Button
        android:id="@+id/bottomRight"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="5dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:onClick="gameBoardClick"
        android:textSize="75dp"
        app:cornerRadius="10dp"
        app:layout_constraintStart_toEndOf="@+id/bottom"
        app:layout_constraintTop_toTopOf="@+id/bottom" />

    <Button
        android:id="@+id/bottom"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="5dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:onClick="gameBoardClick"
        android:textSize="75dp"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="@+id/middle"
        app:layout_constraintTop_toBottomOf="@+id/middle" />

    <Button
        android:id="@+id/right"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="5dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:onClick="gameBoardClick"
        android:textSize="75dp"
        app:cornerRadius="10dp"
        app:layout_constraintStart_toEndOf="@+id/middle"
        app:layout_constraintTop_toTopOf="@+id/middle" />

    <Button
        android:id="@+id/restart"
        android:layout_width="256dp"
        android:layout_height="60dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:onClick="restartGame"
        android:text="Restart Game"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bottom" />

    <TextView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player X Turn"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/middle"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:onClick="gameBoardClick"
        android:textSize="75dp"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/left"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginEnd="5dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:onClick="gameBoardClick"
        android:textSize="75dp"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toStartOf="@+id/middle"
        app:layout_constraintTop_toTopOf="@+id/middle" />

    <Button
        android:id="@+id/menuReturn"
        android:layout_width="103dp"
        android:layout_height="51dp"
        android:layout_marginStart="-25dp"
        android:layout_marginTop="-4dp"
        android:background="#00000000"
        android:backgroundTint="#00FFFFFF"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:rotation="180"
        android:text="❯❯❯"
        android:textColor="#49454F"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>